
@{
    ViewBag.Title = "Personel Blog";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>


    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    @* ALTTAKİ SCRİPT BOOTSTRAP.MİN.JS NİN ÜSTÜNDE OLMALI.AKSİ TAKTİRDE SCRİPLER ÇALIŞMIYOR... *@
    @* bootstrap.js is using jquery library so you need to add jquery library before bootstrap.js *@
   
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    
     <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    @* Layout.css *@
    <link href="~/Content/Layout.css" rel="stylesheet" />

    @* FONT AWESOME *@
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
</head>

<body>

    @* NAVBAR START *@
    <div>
        <nav id="navbar" class="navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#blogNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand visible-xl hidden-xs" style="padding-left:5px;" href="/Home/Index">GUNESBRO'S BLOG</a>
                    <a class="navbar-brand visible-xs hidden-xl" href="/Home/Index">GUNESBRO'S BLOG</a>
                </div>
                <div class="collapse navbar-collapse" id="blogNavbar" style="padding-right:0px;">
                    <ul class="nav navbar-nav navbar-right">

                        @*NAVİGATİON BAR PARTİALVİEW*@
                        @{Html.RenderAction("NavigationBar");}
                        <li class="dropdown" style="background-color:#4df3d8;">
                            @if (Request.Cookies.AllKeys.Contains("SiteUser"))
	                        {
		                        if (Request.Cookies["SiteUser"].Value.ToString() != "")
                                {
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                        @Request.Cookies["SiteUser"].Value

                                    </a>
                                }
                            }
                            else
                            {
                                @Html.ActionLink("LOGIN", "UserLogin", new { }, new { @class = "" })
                            }

                            <ul class="dropdown-menu">
                                <li>
                                    <a href="/Home/Profile">
                                        Profile
                                    </a>
                                </li>
                                <li>
                                    <a href="/Home/AskQuestion">
                                        Ask Question
                                    </a>
                                </li>
                                <li>
                                    <a href="/Home/Logout">
                                        Logout
                                    </a>
                                </li>
                            </ul>

                        </li>

                        @*------------For the Search Button-----------------*@
                        @*<li>
                                <form class="navbar-form navbar-left">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Search" style="border-radius:0px;">
                                        <div class="input-group-btn">
                                            <button class="btn btn-default" type="submit">
                                                <i class="glyphicon glyphicon-search"></i>
                                            </button>
                                        </div>

                                    </div>
                                </form>
                            </li>*@
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    @* NAVBAR END *@


    <div class="container-fluid">
        @RenderBody()
    </div>

    @* FOOTER START *@
    <div>
        <div id="footer" class="container-fluid">
            <div class="container">
                <div class="row">
                    <div class="col-sm-4">
                        @* TAGS PARTIAL VIEW*@
                        TAGS
                        @{ Html.RenderAction("TagsFooter");}
                    </div>
                    <div class="col-sm-4">
                        @* POPULAR POSTS PARTIAL VIEW*@
                        POPULAR POSTS
                        @{Html.RenderAction("PopularPostsFooter");}
                    </div>
                    <div class="col-sm-4">
                        @* SOCIAL *@
                        SOCIAL
                        <div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <blockquote class="twitter-tweet" data-lang="tr"><p lang="tr" dir="ltr">NETFLIX TÜRKİYE Yeni Bölümlerini Çekse, Hiç İtiraz Etmeyeceğimiz 7 Efsane Yerli Dizi <a href="https://t.co/RqeuQougxR">https://t.co/RqeuQougxR</a></p>&mdash; Geekyapar! (Geekyapar) <a href="https://twitter.com/Geekyapar/status/864107893037166592">15 Mayıs 2017</a></blockquote>
                                    <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container-fluid line"> </div>
            <div class="text-right projectOwner">
                gunesbro's Personel Blog Project
            </div>
        </div>
    </div>


    @* FOOTER END *@


</body>
</html>
