

@using (Html.BeginForm("_AccountSettings", "Home", FormMethod.Post))
{
<div class="row form-group">
    <div class="col-sm-2">
        <p class="text text-center" style="margin-top:10px;">Name:</p>
    </div>
    <div class="col-sm-10">
        <input type="text" name="txtName" class="form-control" value="@ViewBag.Name" />
    </div>
</div>
<div class="row form-group">
    <div class="col-sm-2">
        <p class="text text-center" style="margin-top:10px;">Surname:</p>
    </div>
    <div class="col-sm-10">
        <input type="text" name="txtSurname" class="form-control" value="@ViewBag.Surname" />
    </div>
</div>
<div class="row form-group">
    <div class="col-sm-2">
        <p class="text text-center" style="margin-top:10px;">Email:</p>
    </div>
    <div class="col-sm-10">
        <input type="text" name="txtEmail" class="form-control" value="@ViewBag.Email" />
    </div>
</div>
<div class="row form-group">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-10">
        <input type="submit" name="btn" value="UPDATE" class="btn btn-danger" style="width:100%; border-radius:0px;" />
    </div>
</div>

}
