@model IEnumerable<PersonelBlog.Models.QuestionComment>

@foreach (var item in Model)
{
    <div style="border:1px solid #eee; border-radius:5px; margin-top:15px;">
        <div>
            <span style="padding-left:15px; font-weight:bold;">
                @item.SiteUser.NickName
            </span>
            <span style=" float:right; padding-right:15px; padding-top:3px; font-size:14px;">
                @*@item.ToString().AsDateTime().ToShortDateString()*@
            </span>
            <p style="padding-left:15px; padding-right:15px; font-size:16px;">
                @item.QuestionAnswerContext
            </p>
        </div>
    </div>
}
