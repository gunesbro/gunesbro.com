                    <div class="loader">
                        <div class="preloader">
                            <div class="spinner-layer pl-red">
                                <div class="circle-clipper left">
                                    <div class="circle"></div>
                                </div>
                                <div class="circle-clipper right">
                                    <div class="circle"></div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>*@
            @*<!-- #BİTİŞ# Sayfa Yükleyici -->*@
            @*<!-- Overlay For Sidebars -->*@
            <div class="overlay"></div>
            @*<!-- #END# Overlay For Sidebars -->*@
            @*<!-- Üst Bar -->*@
            <nav class="navbar">
                <div class="container-fluid" style="background-color: #f44336;">
                    <div class="navbar-header">
                        <a href="javascript:void(0);" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false"></a>
                        <a href="javascript:void(0);" class="bars"></a>
                        @*<%-- BAŞLIK --%>*@
                        <a class="navbar-brand" href="~/Account/Index" style="color: white;">PANEL - GUNESBRO DESIGN</a>
                    </div>
                    <div class="collapse navbar-collapse" id="navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">


                            <li class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button">
                                    <i class="material-icons col-white">notifications</i>
                                    <span id="kacMesaj" class="label-count col-white"></span>
                                </a>
                                @*<!-- Mesajlar -->*@
                                <ul class="dropdown-menu">

                                    <li class="header">MESSAGES</li>
                                    <li class="body">
                                        <ul class="menu">
                                            @*<asp:Repeater runat="server" ID="mesajListe">
                                                    <itemtemplate>
                                                        <li>
                                                            <a href="<%--javascript:void(0);--%>mesajcevap.aspx?cevapla=<%#Eval(" mesajid") %>
                                                                ">
                                                                <div class="icon-circle bg-light-green">
                                                                    <i class="material-icons">forum</i>
                                                                </div>
                                                                <div class="menu-info">
                                                                    <h4><%#Eval("gönderenEposta") %></h4>
                                                                    <p>
                                                                        <i class="material-icons">access_time</i> <%#Eval("mesajDurum") %>
                                                                    </p>
                                                                    <p>
                                                                        <%#Eval("gönderenMesaj").ToString().Length>35?Eval("gönderenMesaj").ToString().Substring(0,35):Eval("gönderenMesaj").ToString() %> [...]
                                                                    </p>
                                                                </div>
                                                            </a>
                                                        </li>
                                                    </itemtemplate>
                                                </asp:Repeater>*@

                                        </ul>
                                    </li>
                                    <li class="footer">
                                        <a href="mesaj.aspx">View All Messages</a>
                                    </li>
                                </ul>
                                @*<!-- #BİTİŞ# Mesajlar -->*@
                            </li>

                            <li class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button">
                                    <i class="material-icons" style="color: white;">flag</i>
                                    <span class="label-count" style="color: white;">1</span>
                                </a>
                                @*<!-- Görevler -->*@
                                <ul class="dropdown-menu">
                                    <li class="header">Tasks</li>
                                    <li class="body">
                                        <ul class="menu tasks">
                                            <li>
                                                <a href="javascript:void(0);">
                                                    <h4>
                                                        Footer display issue

                                                        <small>32%</small>
                                                    </h4>
                                                    <div class="progress">
                                                        <div class="progress-bar bg-pink" role="progressbar" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100" style="width: 32%">
                                                        </div>
                                                    </div>
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                    <li class="footer">
                                        <a href="javascript:void(0);">Tüm Görevleri Görüntüle</a>
                                    </li>
                                </ul>
                                @*<!-- #BİTİŞ# Görevler -->*@
                            </li>


                        </ul>
                    </div>
                </div>
            </nav>
            @*<!-- #ÜST Bar BİTİŞ -->*@
            <section>
                @*<!-- Sol Sidebar -->*@
                <aside id="leftsidebar" class="sidebar">
                    @*<!-- Kullanıcı Bilgileri -->*@
                    <div class="user-info">
                        <div class="image">
                            <img src="~/PanelFiles/images/user.png" width="48" height="48" alt="User" />
                        </div>
                        <div class="info-container">
                            <div class="name" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @Request.Cookies["userAccess"].Value.ToString()
                            </div>
                            <div class="email">
                                @Request.Cookies["email"].Value.ToString()
                            </div>
                            <div class="btn-group user-helper-dropdown">
                                <i class="material-icons" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">keyboard_arrow_down</i>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="javascript:void(0);"><i class="material-icons">person</i>Profile</a></li>
                                    
                                    <li>
                                        <a href="javascript:void(0);">
                                            <i class="material-icons">
                                                input
                                            </i>
                                            @using (Html.BeginForm("LogOut", "Account"))
                                            {
                                                <input style="height:25px;background-color:transparent; border:0px; " type="submit" value="Çıkış Yap" />
                                            }
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    @*<!-- Kullanıcı Bilgileri BİTİŞ -->*@
                    @*<!-- Menu -->*@
                    <div class="menu">
                        @{Html.RenderAction("PanelSideBar");}
                    </div>
                    @*<!-- #Menu BİTİŞ -->*@
                    @*<!-- Footer -->*@
                    <div class="legal">
                        <div class="copyright">
                            &copy; 2016 <a href="javascript:void(0);">gunesbro</a>.

                        </div>
                        <div class="version">
                            <b>Version: </b>0.0.1

                        </div>
                    </div>
                    @*<!-- #Footer -->*@
                </aside>
                @*<!-- #BİTİŞ# Left Sidebar -->*@

            </section>

            @*<!-- Jquery Core Js -->*@
            <script src="~/PanelFiles/plugins/jquery/jquery.min.js"></script>

            @*<!-- Bootstrap Core Js -->*@
            <script src="~/PanelFiles/plugins/bootstrap/js/bootstrap.js"></script>

            @*<!-- Slimscroll Plugin Js -->*@
            <script src="~/PanelFiles/plugins/jquery-slimscroll/jquery.slimscroll.js"></script>

            @*<!-- Waves Effect Plugin Js -->*@
            <script src="~/PanelFiles/plugins/node-waves/waves.js"></script>

            @*<!-- Custom Js -->*@

            <script src="~/PanelFiles/js/admin.js"></script>

            <script src="~/PanelFiles/js/pages/index.js"></script>
            <div>
                @RenderBody()
            </div>

        </div>
    </div>
</body>
</html>
