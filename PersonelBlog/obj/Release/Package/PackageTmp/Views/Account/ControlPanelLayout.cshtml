
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ControlPanelLayout</title>

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport" />

    @*<!-- Google Fonts -->*@
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css" />


    @*<!-- Bootstrap Core Css -->*@
    <link href="~/PanelFiles/plugins/bootstrap/css/bootstrap.css" rel="stylesheet" />

    @*<!-- Waves Effect Css -->*@
    <script src="~/PanelFiles/plugins/node-waves/waves.js"></script>

    @*<!-- Animation Css(Açılır Kapanır Seyler İçin) -->*@
    <link href="~/PanelFiles/plugins/animate-css/animate.css" rel="stylesheet" />

    @*<!-- Custom Css(ÖNEMLİ) -->*@
    <link href="~/PanelFiles/css/style.css" rel="stylesheet" />

    @*<!-- ÖNEMLİ -->*@
    <link href="~/PanelFiles/css/themes/all-themes.css" rel="stylesheet" />

    @* HATALARI GÖSTERSİN DİYE(MODELDEKİ ERRORLAR) *@
    @RenderSection("scripts", required: false)

</head>
<body>
    <div>
        <div>
            <!-- Sayfa Yükleyici  -->
