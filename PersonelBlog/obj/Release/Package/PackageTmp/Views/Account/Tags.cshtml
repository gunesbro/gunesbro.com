@model IEnumerable<PersonelBlog.Models.Tags>

@{
    ViewBag.Title = "Tags";
    Layout = "~/Views/Account/ControlPanelLayout.cshtml";
}

<div>
    <section class="content">
        <div class="container-fluid">
            <div class="block-header">
                <h2>TAGS</h2>
            </div>
            @using (Html.BeginForm("AddTag", "Account", FormMethod.Post, new { @class = "" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <div class="form-group col-md-offset-2 col-md-10">
                        <label class="control-label col-md-2">TAG NAME : </label>
                        <div class=" col-md-10">
                            <input type="text" name="txtTag" class="form-group form-control col-md-2" style="padding-left:10px;" placeholder="Write Here!" />
                        </div>
                    </div>

                    <div class="form-group col-md-offset-2">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="ADD TAG" class="btn btn-primary " style="width:96%; margin-top:3px;" />
                        </div>
                    </div>
                </div>
            }

        </div>

        <div>
            <div class="container" style="margin-top:5%;">
                <div class="col-md-offset-5 col-md-3 " >
                    <div class="block-header">
                        <h2>TAG LİST</h2>
                    </div>
                    <div class="table-responsive" style="border:1px solid white;">
                        <table class="table table-bordered table-hover">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.TagName)
                                </th>
                                <th></th>
                              
                            </tr>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td style="">
                                    @Html.DisplayFor(modelItem => item.TagName)
                                </td>
                                <td class="text-center">
                                    @Html.ActionLink("Delete", "DeleteTag", new { gelenId = item.TagId }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                            }

                        </table>

                    </div>
                </div>
            </div>
        </div>


    </section>
</div>